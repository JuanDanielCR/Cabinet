<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.juandaniel.cabinet.activacionReceta">

    <include layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/my_toolbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:layout_margin="15dp"
        android:id="@+id/activacion"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttondinamic"
        android:layout_gravity="center_horizontal">



    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Para quitar a este contacto de la receta da clic en el botÃ³n 'Quitar contacto'"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/textView32" />

    <com.example.juandaniel.cabinet.FButton
        fbutton:buttonColor="@color/fbutton_color_alizarin"
        fbutton:shadowColor="@color/fbutton_color_pomegranate"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="6dp"
        fbutton:paddingEnd="15dp"
        fbutton:paddingStart="15dp"
        fbutton:cornerRadius="5dp"
        android:onClick="desvincular"
        android:textColor="@color/fbutton_color_clouds"
        android:text="Quitar contacto"
        android:padding="8dp"
        android:layout_height="wrap_content"
        android:layout_width="185dp"
        android:layout_above="@+id/textView10"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
