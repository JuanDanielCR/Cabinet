<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:elegantTextHeight="true"
        android:textColor="@color/fbutton_color_wet_asphalt"
        android:id="@+id/familianombre"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
 />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fbutton_color_asbestos"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/family"
        android:textSize="15dp"
        android:layout_below="@+id/familianombre"
        android:layout_alignLeft="@+id/familianombre"
        android:layout_alignStart="@+id/familianombre" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/fbutton_color_asbestos"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="15dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/sexy"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/family"
        android:layout_alignStart="@+id/family" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView11"
        android:src="@drawable/flecha"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/id_user"
        android:layout_below="@+id/sexy"
        android:layout_alignLeft="@+id/sexy"
        android:layout_alignStart="@+id/sexy" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/id_contact"
        android:layout_alignTop="@+id/sexy"
        android:layout_toLeftOf="@+id/imageView11"
        android:layout_toStartOf="@+id/imageView11" />


</RelativeLayout>