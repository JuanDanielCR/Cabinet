<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.juandaniel.cabinet.CabinetAlta">

    <include layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/my_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user"
            android:id="@+id/imageView3" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textAlignment="center"
        android:textColor="@color/primary"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:text="+ Usuarios"
        android:id="@+id/textView3" />

        <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue1"
        android:inputType="textPersonName"
        android:hint="Ingresa tu Nombre"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtName" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ejemplo: Juan Daniel"
        android:id="@+id/textView4" />


    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:inputType="textPersonName"
        android:textColor="@color/blue1"
        android:hint="Ingresa tu Apellido Paterno"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtPaterno" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ejemplo: Castillo"
        android:id="@+id/textView6" />


    <EditText
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/blue1"
        android:hint="Ingresa tu Apellido Materno"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtMaterno" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ejemplo: Reyes"
        android:id="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/darks"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sexo:"
        android:id="@+id/textView9" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/back"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:text="Masculino/Femenino"
        android:id="@+id/sexo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/darks"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edad:"
        android:id="@+id/textView10" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/blue1"
        android:ems="10"
        android:id="@+id/txtAge" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ejemplo: 18"
        android:id="@+id/textView11"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar"
        android:background="@color/primary"
        android:textColor="@color/white"
        android:id="@+id/btnAgregarBD"
        android:layout_gravity="center_horizontal"
        android:onClick="AgregarUsuarioDB" />
    </LinearLayout>

</ScrollView>
</LinearLayout>
