<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:elegantTextHeight="true"
        android:textColor="@color/fbutton_color_wet_asphalt"
        android:id="@+id/recetanombre"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/fbutton_color_asbestos"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/duracion"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"

        android:layout_below="@+id/recetanombre"
        android:layout_alignLeft="@+id/recetanombre"
        android:layout_alignStart="@+id/recetanombre" />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView11"
        android:src="@drawable/flecha"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/id_receta"
 />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView15"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/item"
        android:layout_alignTop="@+id/imageView11"
        android:layout_toLeftOf="@+id/duracion"
        android:layout_toStartOf="@+id/duracion" />


</RelativeLayout>
