<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.juandaniel.cabinet.mis_recetas">

    <include layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/my_toolbar"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:id="@+id/imageView14"
                android:src="@drawable/recertas"
                android:layout_gravity="center_horizontal" />

            <com.example.juandaniel.cabinet.FButton
                fbutton:buttonColor="@color/fbutton_color_wet_asphalt"
                fbutton:shadowColor="@color/fbutton_color_midnight_blue"
                fbutton:shadowEnabled="true"
                fbutton:shadowHeight="6dp"
                fbutton:paddingEnd="15dp"
                fbutton:paddingStart="15dp"
                fbutton:cornerRadius="5dp"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="AGREGAR RECETA"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:id="@+id/btnTour"
                android:onClick="AgregarReceta" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="No tienes recetas registradas"
                android:id="@+id/datosrecetas" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="253dp"
                android:id="@+id/listarecetas"
                android:layout_weight="0.98" />


</LinearLayout>
