<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juandaniel.cabinet.RecetaHome">

    <include layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/my_toolbar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView2" >

    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/my_toolbar">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/recertas"
            android:layout_marginTop="10dp"
            android:id="@+id/imageView13"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="RECETARIO"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textColor="@color/fbutton_color_nephritis"
            android:id="@+id/textView15"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Para crear tus recetas y recibir notificaciones sigue los siguientes pasos: "
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/fbutton_color_wet_asphalt"
            android:id="@+id/textView19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="1. Crea tu receta"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/fbutton_color_asbestos"
            android:id="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/fbutton_color_asbestos"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="2. Agrega tus medicamentos"
            android:textSize="20dp"
            android:id="@+id/textView17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/fbutton_color_asbestos"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="3. Agrega los horarios"
            android:textSize="20dp"
            android:id="@+id/textView18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/fbutton_color_asbestos"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="4. Agrega a tus Usuarios"
            android:textSize="20dp"
            android:id="@+id/textView20" />
        <com.example.juandaniel.cabinet.FButton
            fbutton:buttonColor="@color/fbutton_color_emerald"
            fbutton:shadowColor="@color/fbutton_color_nephritis"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            fbutton:paddingEnd="15dp"
            fbutton:paddingStart="15dp"
            fbutton:cornerRadius="5dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Comenzar"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:id="@+id/button"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="25dp"
            android:onClick="mias"
            android:layout_above="@+id/btnTour"
      />

    </LinearLayout>
</RelativeLayout>
