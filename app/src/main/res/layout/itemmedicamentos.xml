<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:elegantTextHeight="true"
        android:textColor="@color/fbutton_color_wet_asphalt"
        android:id="@+id/asocianombre"
        android:textSize="18dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageView11"
        android:src="@drawable/flecha"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_margin="5dp"
        android:id="@+id/id_enviaasocia"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignRight="@+id/asocianombre"
        android:layout_alignEnd="@+id/asocianombre" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:layout_marginTop="10dp"
        android:id="@+id/dosismedica"
        android:layout_marginBottom="15dp"
        android:layout_below="@+id/id_enviaasocia"
        android:layout_alignLeft="@+id/asocianombre"
        android:layout_alignStart="@+id/asocianombre" />
</RelativeLayout>