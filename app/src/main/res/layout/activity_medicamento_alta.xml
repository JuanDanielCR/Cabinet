<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.juandaniel.cabinet.recetaPerfil">

    <include layout="@layout/toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/my_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3" >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/medicina"
            android:id="@+id/imageView17"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Medicamentos"
            android:id="@+id/textView33"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="1. Ingresa los datos en los campos"
            android:layout_margin="15dp"
            android:layout_marginBottom="0dp"
            android:id="@+id/textView34" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="2. Ingresa los horarios del medicamento"
            android:layout_margin="15dp"
            android:id="@+id/textView35" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre del Medicamento"
            android:layout_margin="10dp"
            android:id="@+id/textView36" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/nombreMedicamento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dosis del Medicamento"
            android:layout_margin="10dp"
            android:id="@+id/textView37" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dosisMedicamento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Ejemplo: La dosis va indica en las unidades de la receta, g, mg, ml, etc..."
            android:id="@+id/textView38"
            android:layout_margin="15dp"
            android:layout_gravity="right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vía del Medicamento"
            android:layout_margin="10dp"
            android:id="@+id/textView39" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/viaMedicamento" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="¿Cuántas veces al día se debe tomar?"
            android:layout_margin="10dp"
            android:id="@+id/textView40" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/frecuenciaMedicamento" />

        <com.example.juandaniel.cabinet.FButton
            fbutton:buttonColor="@color/primary"
            fbutton:shadowColor="@color/fbutton_color_midnight_blue"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="6dp"
            fbutton:paddingEnd="15dp"
            fbutton:paddingStart="15dp"
            android:layout_marginLeft="15dp"
            fbutton:cornerRadius="5dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="+ Medicamento"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:id="@+id/btnMedicamento"
            android:layout_marginBottom="12dp"
            android:layout_above="@+id/btnTour"
            android:layout_centerHorizontal="true"
            android:onClick="AltaMedicamento"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
